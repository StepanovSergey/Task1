<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

	<form-beans>
		<form-bean name="newsForm" type="com.epam.news.forms.NewsForm" />
		<form-bean name="newsListForm" type="com.epam.news.forms.NewsListForm" />
	</form-beans>
	
	<!-- Actions -->
	<action-mappings>
		
		<action path="/mainPageindex" forward="newsList.page" />
				
		<action path="/NewsList" type="com.epam.news.actions.NewsListAction" name="newsListForm" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>
		
		<action path="/ViewNews" type="com.epam.news.actions.NewsListAction" name="newsListForm" input="/index.jsp" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>
		
		<action path="/EditNews" type="com.epam.news.actions.NewsListAction" name="newsListForm" input="/index.jsp" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>
		
		<action path="/DeleteNews" type="com.epam.news.actions.NewsListAction" name="newsListForm" input="/index.jsp" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>
		
		<action path="/viewname" type="com.epam.news.actions.NewsAction" name="newsForm" input="/index.jsp" validate="false">
			<forward name="newsList" path="newsList.page" />
			<forward name="error" path="error.page" />
		</action>

	</action-mappings>

	<!-- Tiles processor -->
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

	<!-- Internationalization -->
	<message-resources parameter="com/epam/news/resources/ApplicationResource"
		null="false" />

	<!-- Struts tiles configuration -->
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
	</plug-in>
	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation" value="/WEB-INF/applicationContext.xml" />
	</plug-in>
</struts-config>