<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<!-- Forms -->
	<form-beans>
		<form-bean name="newsForm" type="com.epam.news.forms.NewsForm" />
		<form-bean name="newsListForm" type="com.epam.news.forms.NewsListForm" />
		<form-bean name="changeLocaleForm" type="com.epam.news.forms.ChangeLocaleForm" />
		<form-bean name="deleteNewsForm" type="com.epam.news.forms.DeleteNewsForm" />
		<form-bean name="viewNewsForm" type="com.epam.news.forms.ViewNewsForm" />
		<form-bean name="editNewsForm" type="com.epam.news.forms.EditNewsForm" />
		<form-bean name="saveNewsForm" type="com.epam.news.forms.SaveNewsForm" />
		<form-bean name="cancelForm" type="com.epam.news.forms.CancelForm" />
	</form-beans>

	<!-- Global forwards -->
	<global-forwards>
		<forward name="NewsList" path="/NewsList.do" />
		<forward name="Cancel" path="newsList.page" />
	</global-forwards>

	<!-- Actions -->
	<action-mappings>

		<action path="/NewsList" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="viewNewsList" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/ChangeLocale" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="changeLocale" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/ViewNews" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="viewNews" validate="false" scope="session">
			<forward name="success" path="viewNews.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/EditNews" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="viewNews" validate="false">
			<forward name="success" path="addNews.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/DeleteNews" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="deleteNews" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/AddNews" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="addNews" validate="false">
			<forward name="success" path="addNews.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/SaveNews" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="save" validate="false">
			<forward name="success" path="newsList.page" />
			<forward name="failure" path="error.page" />
		</action>

		<action path="/Cancel" name="newsForm"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="cancel" validate="false">
			<forward name="success" path="newsList.page" />
		</action>

	</action-mappings>

	<!-- Tiles processor -->
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

	<!-- Internationalization -->
	<message-resources parameter="com/epam/news/resources/ApplicationResource"
		null="false" />

	<!-- Struts tiles configuration -->
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
	</plug-in>
	<!-- Spring integration -->
	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation" value="/WEB-INF/applicationContext.xml" />
	</plug-in>
</struts-config>